{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@modules/*": ["modules/*"],
      "@lib/*": ["lib/*"],
      "@const/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
